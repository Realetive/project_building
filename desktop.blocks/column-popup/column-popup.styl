.column-popup
  width: 300px
  position: fixed
  height: 100%
  top: -100%
  padding: 20px 35px
  padding-top: 70px
  margin-left: -35px
  -webkit-transition: opacity ease-in-out .5s, top ease-in-out 0s
  -o-transition: opacity ease-in-out .5s, top ease-in-out 0s
  transition: opacity ease-in-out .5s, top ease-in-out 0s
  color: #fff
  z-index: 501
  opacity: 0
  overflow: hidden
  -webkit-font-smoothing: subpixel-antialiased
  background-color: rgb(0,0,0)
  background-color: rgba(0,0,0,0.8)

.column-popup_visible
  top: 0;
  opacity: 1

.column-popup_closing {
  -webkit-transition-delay: 0s,.5s;
  transition-delay: 0s,.5s
}