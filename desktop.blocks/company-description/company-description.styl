.company-description
  font-size: $fs-base-plus
  color: #383838
  &:after,
  &:before
    display: table
    content: " "
    clear: both
  ul
    padding: 0
    list-style-type: none
    li
      margin-bottom: 4px
      line-height: 26px
      text-indent: -1em
      &:before
        content: '\2014\a0'
        color: #ef3124
  h4
    margin-top: 30px
    margin-bottom: 25px
    line-height: 21px
    font-size: $fs-base-large
    font-weight: 300
    color: $black-head
  h2
    margin-top: 29px
    margin-bottom: 47px
    line-height: 47px
    font-size: $fs-h2
    -webkit-font-smoothing: antialiased
    font-weight: 300
    color: #414042
  a
    text-decoration: none
    color: $red-alfa
    border-bottom: 1px solid $red-alfa
    &:hover,
    &:focus
      text-decoration: none
      cursor: pointer
      color: lighten($red-alfa, 20%)
      border-color: lighten($red-alfa, 20%)
      color: rgba(255, 45, 30, 0.8)
      border-color: rgba(255, 45, 30, 0.8)