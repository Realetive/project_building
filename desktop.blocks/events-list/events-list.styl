.events-list-wrap
  position: relative
  margin-bottom: 76px
  &:after
    @extend .clear
.events-list
  position: relative
  float: left
  list-style-type:none
  padding-top 30px
  z-index: 10
  &__timeline
    position: absolute
    top: 0
    bottom:0
    left: 285px;
    width: 1px
    background:darken(white, 20%)
    background:alpha(white, 0.5)
    &:before,
    &:after
      display: block
      position: absolute
      content: ''
      top: -15px
      left: -6.5px
      width: 5px
      height: 5px
      border: 5px solid alpha(white, 0.5)
      border-radius: 50%
    &:after
      top: auto
      bottom: -15px
  &_even
    position: relative
    margin-left: 35px
    padding-left: 35px
    .events-list__item
      &:first-child
        margin-top: 110px
    .events-list__link
      &:after
        border-left: transparent
        border-right: 11px solid #fff
        right: auto
        left: -10px
      .events-list__date
        right: auto
        left: -50px

