.chosen-type__items-wrap
  display: none
  position: absolute
  z-index: 2
  top: 36px
  right: 0
  left: 0
  padding: 6px 10px
  border: 1px solid $grayLight
  border-color: lighten($grayLight,20%)
  border-color: rgba(0,0,0,0)
  box-shadow(0px 0px 5px $grayLight)
  border-radius: $input-border-radius
  background: #fff
  color: $black-head
  outline: none
  font-size: inherit
  font-family:inherit
  font-weight: 300

.chosen-type__items-wrap_visible
  display: block