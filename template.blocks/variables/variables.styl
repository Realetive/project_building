//=Borders
//
//##
$border-radius-base        = 4px
$input-border-radius       = $border-radius-base
$border-radius-size-medium = 5px // =5px
//== Grid system
//
//## Define your custom responsive grid.
$offset-base = 15px

//=Box-model
//
//## Paddings
$padding-medium     = ceil(2.25*$fs-base)     //=36px
//## Margins
$margin-small       = ceil(0.7*$fs-base)      //=12px
$margin-base-min    = ceil(1.5*$fs-base)      //=19px
$margin-base        = ceil(1.5*$fs-base)      //=24px
$margin-medium      = ceil(1.25*$margin-base) //=30px
$margin-medium-plus = ceil(1.45*$margin-base) //=35px
// new standart margins
$margin-standart   = ceil(0.625*$fs-base)     //=10px