//Ie support
$support-for-ie = true

//== Template size
//
//## Sizes of template
$width-template = 1230px

//== Header
//
//## Basics of a header
$header-height  = 86px

//== Footer
//
//## Basics of a footer
$footer-height = 94px


//== Typography
//
//## Font, line-height, and _color for body text, headings, and more.
$fs-base              = 16px
$fs-extra-small       = ceil(0.75*$fs-base) //~12px
$fs-small             = ceil(0.87*$fs-base) //~14px
$fs-small-plus        = ceil(0.93*$fs-base) //~15px
$fs-base-plus         = ceil(1.06*$fs-base) //~17px
$fs-base-large        = ceil(1.12*$fs-base) //~18px
$fs-base-large-plus   = ceil(1.18*$fs-base) //~19px
$fs-medium-minus      = ceil(1.25*$fs-base) //~20px
$fs-medium-half-minus = ceil(1.37*$fs-base) //~22px
$fs-medium            = ceil(1.5*$fs-base)  //~24px
// standart title font-sizes
$fs-h0                = ceil(3.19*$fs-base) //~51px
$fs-h1                = ceil(3*$fs-base)    //~48px
$fs-h2                = ceil(2.5*$fs-base)  //~40px
$fs-h3                = ceil(1.87*$fs-base) //~30px
$fs-h4                = $fs-base-large      //~18px
// new standart title font-sizes
$fs-h1_new            = ceil(5.625*$fs-base) //~90px xxl
$fs-h2_new            = ceil(3.188*$fs-base) //~51px xl
$fs-h3_new            = ceil(2.5  *$fs-base) //~40px l
$fs-h4_new            = ceil(2.18*$fs-base) //~35px m
$fs-h5_new            = ceil(1.875*$fs-base) //~30px s
$fs-h6_new            = ceil(1.5  *$fs-base) //~24px xs

$ff-thin        = 'robotothin'
$ff-light       = 'robotolight'
$ff-bold        = 'robotobold'
$ff-medium      = 'robotomedium'
$ff-regular     = 'robotoregular'
$ff-lightitalic = 'robotolight_italic'
