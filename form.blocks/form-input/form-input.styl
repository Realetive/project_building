.form-input-wrapper
  position: relative
  &_inline
    display: inline-block
    float: left
  &_service
    &_button
      .form-input
        width: 330px
        height: 50px
  &:after
    display: block
    clear: both
    content: ''

.form-input
  width: 100%
  padding: 6px 45px 6px 10px
  -webkit-apperance: none
  height: 36px
  background: #fff
  background: rgba(0,0,0,0)
  border: 1px solid $grayLight
  border-radius: $input-border-radius
  color: $black-head
  outline: none
  font-size: inherit
  font-family:inherit
  font-weight: 300
  &::-ms-clear
    display: none;
  &:focus
    border-color: lighten($grayLight,20%)
    border-color: rgba(0,0,0,0)
    box-shadow(0px 0px 5px $grayLight)
  &.error
    color: $red-alfa
    border-color: $red-alfa
    &:focus
      border-color: lighten($red-alfa, 20%)
      border-color: rgba(0, 0, 0, 0)
      box-shadow(0px 0px 5px $red-alfa)